    <meta name="og:image" content="<%= image_url 'og/20200107Kindnessday035.jpg' %>" />
    <meta name="og:image" content="<%= image_url 'og/20200107Kindnessday069.jpg' %>" />
    <meta name="og:image" content="<%= image_url 'og/20200107Kindnessday082B.jpg' %>" />
    <!-- og end -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
