  <body>
    <header>
      <div class="light_menu">
        <div class="menu-container">
          <div class="light-logo"><a href="<%= root_path %>"><img src="<%= image_url 'logo.svg'%>" alt="logo"></a></div>
          <div class="light-nav-container">
            <div class="light-lan">
              <span class="<%= I18n.locale.to_s == 'zh-TW' ? 'active' : ''%>">
                <a href="/zh-TW">繁中</a></span>｜
              <span class="<%= I18n.locale.to_s == 'en' ? 'active' : ''%>">
                <a href="/en">EN</a>
              </span>
            </div>
            <nav class="nav">
              <ul>
                <li class="<%= active_link_to_class(about_path, active: :inclusive)%>">
                  <a href="<%= about_path %>"><%= t('menu.about_us')%></a>
                </li>
                <li class="<%= active_link_to_class(reservs_path, active: :inclusive)%>">
                  <a href="<%= reserv_path(@first_store) %>"><%= t('menu.reservation')%></a>
                </li>
                <li class="<%= active_link_to_class(food_index_path, active: :inclusive)%>">
                  <a href="<%= food_index_path %>"><%= t('menu.food_and_beverages')%></a>
                </li>
                <li class="<%= active_link_to_class(facilities_path, active: :inclusive)%>">
                  <a href="<%= facilities_path %>"><%= t('menu.facility')%></a>
                </li>
                <li class="<%= active_link_to_class(traffics_path, active: :inclusive)%>">
                  <a href="<%= traffic_path(@first_store) %>"><%= t('menu.traffic')%></a></li>
                <li class="<%= active_link_to_class(news_index_path, active: :inclusive)%>">
                  <a href="<%= news_index_path %>"><%= t('menu.news')%></a>
                </li>
              </ul>
            </nav>
          </div>
          <div class="light-icon">
            <span><a href="<%= @setting.fb_url %>"><img src="<%= image_url 'FB-icon-light.svg'%>" alt="FB-icon"></a></span>
            <span><a href="<%= @setting.ig_url %>"><img src="<%= image_url 'IG-icon-light.svg'%>" alt="IG-icon"></a></span>
          </div>
          <input id="toggle" type="checkbox" />
          <label class="hamburger" for="toggle">
            <div class="top"></div>
            <div class="meat"></div>
            <div class="bottom"></div>
          </label>
          <div class="nav1200">
            <div class="nav-wrapper">
              <hr>
              <nav class="mobile-nav">
                <div class="nav1200-left">
                  <div class="nav1200-logo"><img src="<%= image_url 'straight-logo.svg'%>" alt=""></div>
                  <div class="nav1200-lan"><span class="<%= I18n.locale.to_s == 'zh-TW' ? 'active' : ''%>"><a href="/zh-TW">繁中</a></span>｜<span class="<%= I18n.locale.to_s == 'en' ? 'active' : ''%>"><a href="/en">En</a></span></div>
                  <div class="nav1200-icons">
                    <a href="<%= @setting.fb_url %>"><img src="<%= image_url 'FB-icon-light.svg'%>" alt=""></a>
                    <a href="<%= @setting.ig_url %>"><img src="<%= image_url 'IG-icon-light.svg'%>" alt=""></a>
                  </div>
                </div>
                <div class="nav1200-right">
                  <ul>
                    <li class="<%= active_link_to_class(about_path, active: :inclusive)%>">
                      <a href="<%= about_path %>"><span>About Us</span>
                        <p>認識我們</p>
                      </a>
                    </li>
                    <li class="<%= active_link_to_class(reservs_path, active: :inclusive)%>">
                      <a href="<%= reserv_path(@first_store) %>"><span>Reservation</span>
                        <p>訂房Go!</p>
                      </a>
                    </li>
                    <li class="<%= active_link_to_class(food_index_path, active: :inclusive)%>">
                      <a href="<%= food_index_path %>"><span>Food & Beverages</span>
                        <p>餐飲料理</p>
                      </a>
                    </li>
                    <li class="<%= active_link_to_class(facilities_path, active: :inclusive)%>">
                      <a href="<%= facilities_path %>"><span>Facility</span>
                        <p>服務設施</p>
                      </a>
                    </li>
                    <li class="<%= active_link_to_class(traffics_path, active: :inclusive)%>">
                      <a href="<%= traffic_path(@first_store) %>"><span>Traffic</span>
                        <p>交通資訊</p>
                      </a>
                    </li>
                    <li class="<%= active_link_to_class(news_index_path, active: :inclusive)%>">
                      <a href="<%= news_index_path %>"><span>
                          News</span>
                        <p>最新消息</p>
                      </a>
                    </li>
                  </ul>
                </div>
                <div class="nav800-icons">
                  <a href="<%= @setting.fb_url %>"><img src="<%= image_url 'FB-icon-light.svg'%>" alt=""></a>
                  <a href="<%= @setting.ig_url %>"><img src="<%= image_url 'IG-icon-light.svg'%>" alt=""></a>
                </div>
              </nav>
            </div>
          </div>
          <!--burger-->
        </div>
      </div>
      <!--light-menu-->
      <div id="navbar">
        <div class="nav-container">
          <div class="navbar_logo">
            <%= link_to root_path do %>
              <img id="nav-logo-b" class="nav-logo-b" src="<%= image_url 'logo-b.svg'%>" alt="logo">
              <img id="nav-logo-w" class="nav-logo-w" src="<%= image_url 'logo-w.svg'%>" alt="logo">
            <% end %>
          </div>
          <div class="navbar_link">
            <a href="<%= about_path %>"><%= t('menu.about_us')%></a>
            <a href="<%= reserv_path(@first_store) %>"><%= t('menu.reservation')%></a>
            <a href="<%= food_index_path %>"><%= t('menu.food_and_beverages')%></a>
            <a href="<%= facilities_path %>"><%= t('menu.facility')%></a>
            <a href="<%= traffic_path(@first_store) %>"><%= t('menu.traffic')%></a>
            <a href="<%= news_index_path %>"><%= t('menu.news')%></a>
          </div>
          <div class="navbar_icon">
            <span><a href="<%= @setting.fb_url %>"><img src="<%= image_url 'FB-icon.svg'%>" alt="FB-icon"></a></span>
            <span><a href="<%= @setting.ig_url %>"><img src="<%= image_url 'IG-icon.svg'%>" alt="IG-icon"></a></span>
            <span><a href="<%= @setting.fb_url %>"><img src="<%= image_url 'FB-icon-light.svg'%>" alt="FB-icon"></a></span>
            <span><a href="<%= @setting.ig_url %>"><img src="<%= image_url 'IG-icon-light.svg'%>" alt="IG-icon"></a></span>
          </div>
          <label id="index-1200" class="hamburger scrollh-b" for="toggle">
            <div class="top"></div>
            <div class="meat"></div>
            <div class="bottom"></div>
          </label>
        </div>
      </div>
      <!--light-scrollnavbar-->
    </header>
    <%= yield %>
    <footer class="clearfix">
      <div class="container">
        <div class="footer_top">
          <div class="footer_logo">
            <img src="<%= image_url 'footer-logo.svg'%>" alt="footer-logo">
            <% if I18n.locale.to_s == 'zh-TW' %>
              <img class="footer_title" src="<%= image_url 'ch-logo.svg'%>" alt="">
            <% end %>
          </div>
          <div class="footer_info">
            <div class="footer_icon">
              <span><a href="<%= @setting.fb_url %>"><img src="<%= image_url 'FB-icon2.svg'%>" alt="FB-icon"></a></span>
              <span><a href="<%= @setting.ig_url %>"><img src="<%= image_url 'IG-icon-light.svg'%>" alt="IG-icon"></a></span>
              <span><a href="#"><img src="<%= image_url 'if-icon.png'%>" alt="IF-icon"></a></span>
            </div>
          </div>
        </div>
        <hr>
        <div class="footer_copyright">
          <div class="footer_link">
            <div class="link-wrapper">
              <span>
                <a href="<%= @setting.fb_url %>"><img src="<%= image_url 'footer-arrow.svg'%>" alt="FB-icon"></a>
              </span>
              <span><a href="<%= @setting.hr_url %>"><%= t('footer.recruit')%></a></span>
            </div>
            <div class="link-wrapper">
              <span><a href="#">
                <img src="<%= image_url 'footer-arrow.svg'%>" alt="FB-icon"></a>
              </span>
               <% if I18n.locale.to_s == 'zh-TW'%>
              <span><a href="https://www.kindness-hotel.com.tw/">康橋商旅系列</a></span>
              <% end %>
            </div>
          </div>
          <span class="copyright-txt"><%= @setting.copyright %></span>
        </div>
      </div>
    </footer>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAaNd1kt1rzwAif3KyzksJqmMCbMyhhkaI&language=<%=I18n.locale.to_s%>"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.16.1/TweenMax.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/debug.addIndicators.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/animation.gsap.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript">
      $(document).on('ready', function() {
       var $status = $('.counter');
       var $slickElement = $('.variable');
      
       $slickElement.on('init reInit afterChange', function (event, slick, currentSlide, nextSlide) {
        //currentSlide is undefined on init -- set it to 0 in this case (currentSlide is 0 based)
        var i = (currentSlide ? currentSlide : 0) + 1;
        $status.text(i + '/' + slick.slideCount);
       });
      
       $slickElement.slick({
        dots: false,
        prevArrow: '<div class="slide-arrow prev-arrow"><img src="<%= image_url 'slide-prev.svg'%>" alt=""></div>',
        nextArrow: '<div class="slide-arrow next-arrow"><img src="<%= image_url 'slide-next.svg'%>" alt=""></div>',
        infinite: true,
        variableWidth: false,
        speed: 600,
        centerMode: true,
        centerPadding: '23%',
        slidesToShow: 1,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 4200,
        responsive: [
        {
          breakpoint: 1024,
          settings: {
            centerPadding: '110px',
            slidesToShow: 1,
            slidesToScroll: 1,
            infinite: true,
            dots: false
          }
        },
        {
          breakpoint: 800,
          settings: {
            centerPadding: '60px',
            slidesToShow: 1,
            slidesToScroll: 1,
            infinite: true,
            dots: false
          }
        },
        {
          breakpoint: 600,
          settings: {
            prevArrow: '<div class="slide-arrow prev-arrow white"><img src="<%= image_url 'slide-prev-w.svg'%>" alt=""></div>',
            nextArrow: '<div class="slide-arrow next-arrow white"><img src="<%= image_url 'slide-next-w.svg'%>" alt=""></div>',
            centerPadding: '0px',
            variableWidth: false,
            slidesToShow: 1,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 480,
          settings: {
            prevArrow: '<div class="slide-arrow prev-arrow white"><img src="<%= image_url 'slide-prev-w.svg'%>" alt=""></div>',
            nextArrow: '<div class="slide-arrow next-arrow white"><img src="<%= image_url 'slide-next-w.svg'%>" alt=""></div>',
            centerPadding: '0px',
            variableWidth: false,
            slidesToShow: 1,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 330,
          settings: {
            prevArrow: '<div class="slide-arrow prev-arrow white"><img src="<%= image_url 'slide-prev-w.svg'%>" alt=""></div>',
            nextArrow: '<div class="slide-arrow next-arrow white"><img src="<%= image_url 'slide-next-w.svg'%>" alt=""></div>',
            centerPadding: '0px',
            variableWidth: false,
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
       });
      
      });
      
      $(document).on('ready', function() {
        $(".traffic-slide").slick({
            dots: false,
            prevArrow: '<div class="slide-arrow prev-arrow"><img src="<%= image_url 'slide-prev.svg'%>" alt=""></div>',
            nextArrow: '<div class="slide-arrow next-arrow"><img src="<%= image_url 'slide-next.svg'%>" alt=""></div>',
            infinite: true,
            variableWidth: false,
            speed: 800,
            slidesToShow: 3,
            slidesToScroll: 3,
            responsive: [{
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 2
                    }
                },
                {
                    breakpoint: 780,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1,
                        centerMode: false
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        prevArrow: '<div class="slide-arrow prev-arrow white"><img src="<%= image_url 'slide-prev-w.svg'%>" alt=""></div>',
                        nextArrow: '<div class="slide-arrow next-arrow white"><img src="<%= image_url 'slide-next-w.svg'%>" alt=""></div>',
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                }
            ]
        });
          });
    </script>
    <%= yield :page_javascript %>
  </body>
</html>