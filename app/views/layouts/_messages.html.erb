<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="pad margin no-print">
      <div class="alert alert-<%= name.to_s == 'danger' ? 'warning' : 'success' %> alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-info"></i> 提示訊息!</h4>
        <%= content_tag :div, msg.to_s.html_safe, :id => "flash_#{name}" %>
      </div>
    </div>
  <% end %>
<% end %>