<% content_for :page_javascript do %>
  <%= javascript_include_tag 'designer/facility' %>
  <%= javascript_include_tag 'designer/service' %>
<% end %>
<!--slider-->
<section class="inside-page-banner">
  <div class="light_Banner_container_table inside-banner">
    <div class="light_Banner_container_table_cell">
      <h2>Facility</h2>
    </div>
  </div>
  <div class="overlay"></div>
  <div class="inside-banner-contain" style="background-image: url(<%= image_url 'facility.jpg'%>);"></div>
</section>
<!--content-->
<section id="inside-section" class="container clearfix">
  <div class="facility-top">
    <div class="facility-txt">
      <h2>Service</h2>
      <div class="facility-txt-bottom">
        <span>Good service facilities make you experience a pleasant stay.</span>
        <p>Sharing a good stay with you, whether you are going to the counter to consult a tourist attraction or to enjoy a delicious meal at the restaurant, we look forward to seeing you at the moment of staying in Cambridge.</p>
      </div>
    </div>
    <div class="facility-service-incon">
      <ul class="icon-ul">
        <li>
          <h3>01</h3>
          <div class="service-img"><img src="<%= image_url 'sevice-icon1.svg'%>" alt=""></div>
          <span>Free Wi-Fi</span>
          <p>Free high-speed Internet connection hotel-wide</p>
        </li>
        <li>
          <h3>02</h3>
          <div class="service-img"><img src="<%= image_url 'sevice-icon2.svg'%>" alt=""></div>
          <span>Business Desktop</span>
          <p>Computer provided for simple inquiry search and business operation</p>
        </li>
        <li>
          <h3>03</h3>
          <div class="service-img"><img src="<%= image_url 'sevice-icon3.svg'%>" alt=""></div>
          <span>Reception Service</span>
          <p>24-hour staff accessible for your convenience</p>
        </li>
      </ul>
      <ul class="icon-ul">
        <li>
          <h3>04</h3>
          <div class="service-img"><img src="<%= image_url 'sevice-icon4.svg'%>" alt=""></div>
          <span style="letter-spacing: 0;">Morning Call</span>
          <p>Do not worry to sleep through your itinerary</p>
        </li>
        <li>
          <h3>05</h3>
          <div class="service-img"><img src="<%= image_url 'sevice-icon5.svg'%>" alt=""></div>
          <span>Taxi</span>
          <p> Let us help you to tell the driver where you would like to visit</p>
        </li>
        <li>
          <h3>06</h3>
          <div class="service-img"><img src="<%= image_url 'sevice-icon6.svg'%>" alt=""></div>
          <span>Travel Advisory</span>
          <p>Feel free to ask us how to make your trip more fun</p>
        </li>
      </ul>
    </div>
  </div>
</section>
<section class="facility-gallery clearfix">
