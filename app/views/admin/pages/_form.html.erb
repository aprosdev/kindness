<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">頁面SEO設定</h4>
            </div>
        </div>
    </div>
  <div class="row">
      <div class="col-lg-12">
          <div class="card">
              <div class="card-body">
                  <h4 class="header-title mb-3"><%= title %></h4>
                    <%= form_for([:admin, @page], inline_errors: true, class: 'needs-validation', :novalidate => 'novalidate') do |f| %>

                      <div class="form-group mb-3">
                        <label for="grade_name">頁面名稱</label>
                        <%= f.text_field :name, label: '名稱', class: 'form-control', placeholder: '首頁'%>
                      </div>

                      <div class="form-group mb-3">
                        <label for="grade_name">頁面路徑</label>
                        <%= f.text_field :path, label: '名稱', class: 'form-control', placeholder: '/'%>
                      </div>

                      <div class="form-group mb-3">
                          <label for="grade_name">SEO Title</label>
                          <%= f.text_field :title, label: 'title', class: 'form-control', :required => true %>
                      </div>

                       <div class="form-group mb-3">
                        <label for="grade_name">SEO description</label>
                        <%= f.text_field :description, label: 'description', class: 'form-control', :required => true%>
                      </div>
                      
                      <div class="form-group mb-3">
                        <label for="grade_name">SEO keyword</label>
                         <%= f.text_field :keyword, label: 'keyword', class: 'form-control'%>
                      </div>

                      <%= link_to "回清單", admin_pages_path %>
                      <%= f.submit "送出", class: "btn btn-primary" %>
                  <% end %>
              </div> 
          </div> 
      </div>
  </div>
