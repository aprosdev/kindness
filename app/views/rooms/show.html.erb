<section class="blackbg">
  <div class="container traffic">
    <div class="reserv-intro">
      <h4><%= @room.title %></h4>
      <%= @room.spec.to_s.html_safe %>
    </div>
  </div>
  <!-- container-->
</section>
<section class="blackbg">
  <div class="reserv container">
    <div class="reserv-content clearfix">
      <div class="reserv-banner fadetran-img">
        <img class="mask2" src="<%= image_url @room.cover %>" alt="">
      </div>
      <div class="reserv-detail-txt">
        <h4><%= t('landing.rooms.goods_facilities') %></h4>
        <ul>
          <% if I18n.locale.to_s == 'zh-TW' %>
            <li>
              <% @room.equipment_left_zh_tw.each_with_index do |val, index| %>
                ◆ <%= val%><br>
              <% end %>
            </li>
            <li>
              <% @room.equipment_right_zh_tw.each_with_index do |val, index| %>
                ◆ <%= val%> <br>
              <% end %>
            </li>
          <% else %>
            <li>
              <% @room.equipment_left_en.each_with_index do |val, index| %>
                ◆ <%= val%><br>
              <% end %>
            </li>
            <li>
              <% @room.equipment_right_en.each_with_index do |val, index| %>
                ◆ <%= val%> <br>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <% @room.images.drop(1).in_groups_of(3, false).each_with_index do |img, index|  %>
        <div class="reserv-banner fadetran-img">
          <% if img[0] != nil%>
            <img class="mask2" src="<%= image_url img[0].src.url(:crop) %>" alt="">
          <% end %>
        </div>
        <div class="reserv-double">
          <% if img[1] != nil%>
            <img class="mask2" src="<%= image_url img[1].src.url(:crop) %>" alt="">
          <% end %>
          <% if img[2] != nil%>
            <img class="mask2" src="<%= image_url img[2].src.url(:crop) %>" alt="">
          <% end %>
        </div>
      <% end %>
